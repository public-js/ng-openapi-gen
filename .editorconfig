# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,ts}]
ij_javascript_use_explicit_js_extension = true
ij_typescript_use_explicit_js_extension = true
quote_type = single

[*.spec.{js,ts}]
ij_javascript_use_explicit_js_extension = false
ij_typescript_use_explicit_js_extension = false

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.html]
indent_size = 2
quote_type = double

[*.json]
indent_size = 2

[*.{yaml,yml}]
indent_size = 2
